<h1>Listing Floor Plans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Beds</th>
      <th>Baths</th>
      <th>Size</th>
      <th>Price</th>
      <th>Deposit</th>
      <th>Floorplan</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @floor_plans.each do |floor_plan| %>
      <tr>
        <td><%= floor_plan.title %></td>
        <td><%= floor_plan.beds %></td>
        <td><%= floor_plan.baths %></td>
        <td><%= floor_plan.size %></td>
        <td><%= floor_plan.price %></td>
        <td><%= floor_plan.deposit %></td>
        <td><%= floor_plan.floorplan %></td>
        <td><%= link_to 'Show', location_floor_plan_path(@location, floor_plan) %></td>
        <td><%= link_to 'Edit', edit_location_floor_plan_path(@location, floor_plan) %></td>
        <td><%= link_to 'Destroy', location_floor_plan_path(@location, floor_plan), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Floor Plan', new_location_floor_plan_path(@location) %>
