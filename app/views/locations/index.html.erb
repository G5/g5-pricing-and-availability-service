<header class="clearfix">
  <h2 class="pull-left">Locations</h2>
  <%= link_to 'New Location', new_location_path, class: "btn btn-success btn-lg pull-right" %>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Urn</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= link_to location.urn, location %></td>
        <td>
          <%= link_to 'Edit', edit_location_path(location), class: "btn btn-primary" %>
          <%= link_to 'Destroy', location, class: "btn", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

