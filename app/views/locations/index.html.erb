<header class="clearfix">
  <h2 class="pull-left">Locations</h2>
  <%= link_to 'New Location', new_location_path, class: "btn btn-primary btn-large pull-right" %>
</header>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Urn</th>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.urn %></td>
        <td><%= link_to location.name, location %></td>
        <td><%= link_to 'Edit', edit_location_path(location), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', location, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

